            <header>
                <h1 class="u-container">{{ title }}</h1>
            </header>
            <main class="u-container u-grid">
                {{ content | safe }}
                <div>
                    <svg class="trip-map" preserveaspectratio="xMinYMin meet" viewbox="0 0 400 300">
                        <path stroke="blue" stroke-width="10px" d="M 0,290 L 200,0"/>
                        <path stroke="green" stroke-width="10px" d="M 200,0 L 400,290"/>
                        <path stroke="red" stroke-width="10px" d="M 400,290 L 0,290"/>
                    </svg>
                    {# todo: make table with flex rows #}
                    <dl class="trip-stats | u-grid">
                        <div>
                            <dt>Distance</dt>
                            <dd>{{ kilometres }}km</dd>
                        </div>
                        <div>
                            <dt>Avg. Speed</dt>
                            <dd>{{ average_speed }}km/h</dd>
                        </div>
                        <div>
                            <dt>Ascent</dt>
                            <dd>{{ ascent }}m</dd>
                        </div>
                        <div>
                            <dt>Descent</dt>
                            <dd>{{ descent }}m</dd>
                        </div>
                        <div>
                            <dt>Total time</dt>
                            <dd>{{ total_duration }}</dd>
                        </div>
                    </dl>
                </div>
                {# todo: move to includes as partial template #}
                {% if name %}
                    {% for day in collections[name] %}
                        <section data-day="{{ day.data.title }}">
                            <hgroup>
                                <h2>{{ day.data.title }}</h2>
                                <h3>Day {{ loop.index }}</h2>
                            </hgroup>
                            <div class="trip-map" style="background-color: var(--thistle-dark);"></div>
                            {# todo: make table with flex rows #}
                            <dl class="trip-stats | u-grid">
                                <div>
                                    <dt>Distance</dt>
                                    <dd>{{ kilometres }}km</dd>
                                </div>
                                <div>
                                    <dt>Avg. Speed</dt>
                                    <dd>{{ average_speed }}km/h</dd>
                                </div>
                                <div>
                                    <dt>Ascent</dt>
                                    <dd>{{ ascent }}m</dd>
                                </div>
                                <div>
                                    <dt>Descent</dt>
                                    <dd>{{ descent }}m</dd>
                                </div>
                                <div>
                                    <dt>Total time</dt>
                                    <dd>{{ total_duration }}</dd>
                                </div>
                            </dl>
                            <div class="content">
                                {{ day.content | safe }}
                            </div>
                            <!-- create single grid cell -->
                        </section>
                    {% endfor %}
                {% endif %}
            </main>
        </div>
